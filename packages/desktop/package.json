{
  "name": "@userdocs/desktop",
  "productName": "UserDocs",
  "version": "0.0.2",
  "description": "Authors steps and processes for collection of screenshots",
  "main": "src/main",
  "repository": "https://github.com/johns10/userdocs_clients",
  "author": "John Davenport",
  "license": "MIT",
  "homepage": "https://user-docs.com",
  "build": {
    "appId": "johns10@gmail.com",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "executableName": "user_docs",
      "target": "AppImage"
    },
    "extraResources": [
      {
        "filter": [
          "./config.json"
        ]
      }
    ]
  },
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder -p always",
    "dist-mac": "electron-builder -m",
    "dist-all": "electron-builder -wm"
  },
  "dependencies": {
    "@userdocs/runner": "@userdocs/runner",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.0"
  },
  "devDependencies": {
    "electron": "12.0.9",
    "electron-builder": "^22.10.5",
    "electron-reload": "^1.5.0",
    "webpack": "4.41.5",
    "webpack-cli": "^3.3.12"
  }
}
